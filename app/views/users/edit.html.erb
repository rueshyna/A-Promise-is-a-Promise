<h1>Editing user</h1>

<div class='edit round'>
  <% form_for(@user) do |f| %>
    <%= f.error_messages %>
    <p>
      <%= f.label :school_id,"School ID" %><br />
      <%= f.text_field :school_id %>
    </p>
    <p>
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :email %><br />
      <%= f.text_field :email %>
    </p>
    <p>
      <%= f.label :password %><br />
      <%= f.password_field :password %>
    </p>
    <p>
      <%= f.label :password_confirmation,"Passward confirmation" %><br />
      <%= f.password_field :password_confirmation %>
    </p>
    <p>
      <%= f.submit 'Update' %>
    </p>
  <% end %>
</div>
